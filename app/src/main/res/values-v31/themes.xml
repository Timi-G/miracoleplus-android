<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MiraCole" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Background color for the splash screen -->
        <item name="android:windowSplashScreenBackground">@color/white</item>

        <!-- Icon shown in the splash screen -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>

        <!-- Optional: Icon background color -->
        <item name="android:windowSplashScreenIconBackgroundColor">@color/purple_500</item>

        <!-- Duration for the splash screen fade out animation -->
        <item name="android:windowSplashScreenAnimationDuration">500</item>

        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>